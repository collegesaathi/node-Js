model SpecialisationProgram {
  id                  Int @id @default(autoincrement())
  program_id           Int
  program  Program  @relation(fields: [program_id], references: [id])
  title               String
  shortname           String?
  description         String
  bannerImage         String?
  icon                String?
  slug                String  
  bannerImageAlt      String?
  pdfdownlaod         String?
  career_growth       String?
  duration            String?
  specialization      String?
  audio               String?
  subtitle            String?
  shortDescription    String?
  video               String?
  universitytitle     String?
  universitydesc      String?
  universitybtmdesc   String?
  university_id       Json?
  conclusion          String?
  specialisationtitle String?
  specialisationdesc  String?
  notes_title String?
  notes_desc String?
   demand_desc String?
  demand_title String?


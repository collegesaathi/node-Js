model SpecialisationSalary {
  id            Int        @id @default(autoincrement())
  title       String
  description String?
  salary    Json?
  notes    String?
  specialisation_program_id Int? @unique
  specialisationProgram     SpecialisationProgram? @relation(fields: [specialisation_program_id], references: [id])
}

model SpecialisationResource {
